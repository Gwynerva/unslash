{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext"],
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
